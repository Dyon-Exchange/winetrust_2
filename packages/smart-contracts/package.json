{
  "name": "@winetrust/smart-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for the WineTrust inventory management system",
  "main": "index.js",
  "scripts": {
    "build:contracts": "npm run clean && npm run compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage",
    "deploy:local": "npx hardhat --network hardhat deploy --export ./lib/export.json",
    "deploy:goerli": "npx hardhat --network goerli deploy --export ./lib/export.json",
    "deploy:rinkeby": "npx hardhat --network rinkeby deploy --export ./lib/export.json",
    "deploy:mainnet": "npx hardhat --network mainnet deploy --export ./lib/export.json",
    "test": "npx hardhat test --show-stack-traces"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ethersproject/contracts": "^5.4.1",
    "@float-capital/solidity-coverage": "^0.7.17",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.3.1",
    "@shopify/eslint-plugin": "^40.4.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-labrys": "^0.6.4",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.6",
    "hardhat": "^2.6.3",
    "hardhat-deploy": "^0.9.1",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-preprocessor": "^0.1.4",
    "typechain": "^5.1.2",
    "typescript": "^4.4.2"
  }
}
