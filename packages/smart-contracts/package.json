{
  "name": "@winetrust/smart-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for the WineTrust inventory management system",
  "main": "index.js",
  "scripts": {
    "build:contracts": "npm run clean && npm run compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage",
    "deploy:local": "npx hardhat --network hardhat deploy --export ./lib/export.json",
    "deploy:goerli": "npx hardhat --network goerli deploy",
    "deploy:rinkeby": "npx hardhat --network rinkeby deploy",
    "deploy:mumbai": "npx hardhat --network mumbai_testnet deploy --export ./lib/export.json",
    "deploy:mainnet": "npx hardhat --network mainnet deploy --export ./lib/export.json",
    "test": "npx hardhat test --show-stack-traces",
    "verify:mainnet": "hardhat --network mainnet etherscan-verify",
    "verify:rinkeby": "hardhat --network rinkeby etherscan-verify",
    "verify:goerli": "hardhat --network goerli etherscan-verify",
    "assign:rinkeby": "hardhat --network rinkeby run ./scripts/assignMinterRole.ts",
    "setMinterRole:rinkeby": "hardhat --network rinkeby run ./scripts/setMinterRole.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ethersproject/contracts": "^5.4.1",
    "@float-capital/solidity-coverage": "^0.7.17",
    "@openzeppelin/contracts": "^4.3.1",
    "@shopify/eslint-plugin": "^40.4.0",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "all": "^0.0.0",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-labrys": "^0.6.4",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "hardhat-preprocessor": "^0.1.4"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/hardhat-upgrades": "^1.17.0",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "ethereum-waffle": "^3.4.0",
    "hardhat": "^2.8.3",
    "hardhat-deploy": "^0.9.27",
    "hardhat-gas-reporter": "^1.0.7",
    "ts-node": "^10.4.0",
    "typechain": "^7.0.0",
    "typescript": "^4.5.4",
    "web3": "^1.7.0"
  }
}
